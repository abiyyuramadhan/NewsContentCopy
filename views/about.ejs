<!DOCTYPE html>
<html lang="en">

<%- include('head') %>

    <body>
        <%- include('header') %>
            <div class="container">

                <h1 class="text-center">About Us</h1>
                <!-- pharagraph here -->
                <p class="my-5">
                    <%= about.history %>
                </p>
                <div class="row my-4">
                    <div class="col-7">
                        <h3>History:</h3>
                        <!-- phragraph here, ref gojek -->
                        <p>
                            <%= about.history %>
                        </p>
                    </div>
                    <div class="col col-md">
                        <img src="<%= about.image[1] %> " alt="uhu" class="rounded mx-auto d-block" width="300"
